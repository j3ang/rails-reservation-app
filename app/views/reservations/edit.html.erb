<div id="reservation_form_box" class="container col-xs-12 mt-5 pt-2">
    <% flash.each do |key, value| %>
        <div class="alert alert-success <%= flash_class(key) %>">
                <%= value %>
        </div>
    <% end %>

    <p id="backBtn" class="btn text-success"><i class="fa fa-arrow-circle-left"></i> <%= link_to 'Back', reservation_path(@reservation) %></p> 
   
    <div>
        <h2 class="text-capitalize">Update reservation details </h2>
        <small class="text-info"> <%= Time.now.asctime %> </small>
    </div>

    <%= bootstrap_form_for(@reservation, method: "put") do |f| %>
      <!-- Name -->
      <%= f.text_field :name%>
      <!-- Number of guests -->
      <%= f.select :guestNumber, ((2..8).map {|i| [i,i] } ), label: "Number of Guest", label_class:"required" %>
      <!-- Date and time -->
      <%= f.datetime_select :datetime, label_class:"required" %>
      <!-- Phomne -->
      <%= f.telephone_field :phone, placeholder:"000-000-0000", pattern: "[0-9]{3}-[0-9]{3}-[0-9]{4}" %>
      <!-- Email -->
      <%= f.email_field :email, label: "Email Address", label_class: "optional" %>
      <!-- Submit -->
      
      <div class="d-flex">
        <span class="col-6 p-0"><%= f.submit "Save", class: "btn btn-outline-primary btn-block mr-2 p-2" %></span>
        <span class="col-6 p-0"><%= link_to 'Remove', reservation_path(@reservation), method: 'delete', data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-block ml-2 p-2'  %></span> 
      </div>


    <% end %>
    
</div>