<div id="reservation_form_box" class="container col-xs-12 mt-5 pt-2">
    <p id="backBtn" class="btn text-success"><i class="fa fa-arrow-circle-left"></i> <%= link_to 'Back', :back %></p> 

    <div>
        <h2>Table Reservation Form</h2>
        <small class="text-info"> <%= Time.now.asctime %> </small>
    </div>

    <%= bootstrap_form_for(@reservation, method: "post") do |f| %>
      <!-- Name -->
      <%= f.text_field :name%>
      <!-- Number of guests -->
      <%= f.select :guestNumber, ((2..8).map {|i| [i,i] } ), label: "Number of Guest", label_class:"required" %>
      <!-- Date and time -->
      <%= f.datetime_select :datetime, label_class:"required" %>
      <!-- Phomne -->
      <%= f.telephone_field :phone, placeholder:"000-000-0000", pattern: "[0-9]{3}-[0-9]{3}-[0-9]{4}" %>
      <!-- Email -->
      <%= f.email_field :email, label: "Email Address", label_class: "optional" %>
      <!-- Submit -->
      <%= f.submit "Submit", class: "btn btn-primary btn-block mt-4 pt-2 p-2" %>
    <% end %>
    
</div>
